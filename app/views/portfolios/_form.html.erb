<%= form_for(@portfolio_item) do |f| %>
<div class="row">
  <div class= "col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: "form-control" %>
  </div>

  <div class="form-group">  
      <label class="btn btn-success">
         Upload a main image file <%= f.file_field :main_image, style: 'display:none;' %>
      </label>
  
  </div>
  <div class="form-group">
        <label class="btn btn-success">
         Upload a thumb image file <%= f.file_field :thumb_image, style: 'display:none;' %>
      </label>
  </div>
</div>

<div class= "col-md-6">
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 15%>
  </div>
</div>

  <hr>

  <div class= "col-md-12">
    <h2> Technologies Used</h2>
    <div class="form-group">
    <%= f.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', f: technology_form %>
     <% end %>
      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>

    </div>

    <div class="form-group">
      <%= f.submit "Save portfolio Item", class: "btn btn-success"%>
    </div>
   </div> 
<% end %>
 